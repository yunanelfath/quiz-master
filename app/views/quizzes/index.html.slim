.col-md-12
  .content-box-header.panel-heading
    .panel-title
      | Questions
    .panel-options
      a[data-rel="collapse" href="#"]
        i.glyphicon.glyphicon-refresh
      a[data-rel="reload" href="#"]
        i.glyphicon.glyphicon-cog
  .content-box-large.box-with-header
    = react_component('QuizItems', {csrfToken: form_authenticity_token})
    br
    br


javascript:
  dispatcher.dispatch({
    actionType: 'quiz-items-global-attributes-setter',
    attributes: {items: #{json_for(@quizzes, nil, {includes: [:content]}).html_safe}, questionItems: #{json_for(@questions, nil, {only: [:id, :content]}).html_safe}}
  })
